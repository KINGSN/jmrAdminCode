<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Fragments.AppBannerScreenFragment"
    tools:ignore="MissingDefaultResource">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/appBannerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFD350"
                android:fontFamily="@font/plusjakarta_text_regular"
                android:padding="10dp"
                android:text="App Banner Image 1"
                android:textAlignment="center"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="App Banner Image1 Url">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBannerLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="https://customsitesmedia.usc.edu/wp-content/uploads/sites/396/2015/06/18014657/mobile-safety-app-banner-new1.png" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/ivBanner1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="#FFEAAD"
                android:scaleType="fitXY"
                android:src="@drawable/banner_demo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#B71C1C" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFD350"
                android:fontFamily="@font/plusjakarta_text_regular"
                android:padding="10dp"
                android:text="App Banner Image 2"
                android:textAlignment="center"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="App Banner Image1 Url">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBannerLink2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="https://customsitesmedia.usc.edu/wp-content/uploads/sites/396/2015/06/18014657/mobile-safety-app-banner-new1.png" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/ivBanner2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="#BDFFA3"
                android:scaleType="fitXY"
                android:src="@drawable/banner_demo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#B71C1C" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFD350"
                android:fontFamily="@font/plusjakarta_text_regular"
                android:padding="10dp"
                android:text="App Banner Image 3"
                android:textAlignment="center"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="App Banner Image1 Url">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBannerLink3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="https://customsitesmedia.usc.edu/wp-content/uploads/sites/396/2015/06/18014657/mobile-safety-app-banner-new1.png" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/ivBanner3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="#FFEAAD"
                android:scaleType="fitXY"
                android:src="@drawable/banner_demo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#B71C1C" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B19FFF"
                android:fontFamily="@font/plusjakarta_text_regular"
                android:padding="10dp"
                android:text="App Banner Image 4"
                android:textAlignment="center"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="App Banner Image1 Url">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBannerLink4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="https://customsitesmedia.usc.edu/wp-content/uploads/sites/396/2015/06/18014657/mobile-safety-app-banner-new1.png" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/ivBanner4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="#FFEAAD"
                android:scaleType="fitXY"
                android:src="@drawable/banner_demo" />

            <Button
                android:id="@+id/btnSaveAppBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="Save" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>