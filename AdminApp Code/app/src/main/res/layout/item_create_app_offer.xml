<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAppOffer"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner_demo" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitleAppOffer"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plusjakarta_text_regular"
                android:maxLines="1"
                android:text="John Doe"
                android:textColor="#2e2e2e"
                android:textSize="@dimen/fab_title"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp">



            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tvAppOfferCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CFEFDA"
                android:fontFamily="@font/plusjakarta_text_regular"
                android:maxLines="1"
                android:padding="4dp"
                android:text="12-12-2021 | 07:28:06 pm"
                android:textColor="#2e2e2e"
                android:textSize="14sp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/actn"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvAppOfferStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CFEFDA"
                    android:fontFamily="@font/plusjakarta_text_regular"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="Enabled"
                    android:textColor="#2e2e2e"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/actn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/editOfferBtn"
                    android:clickable="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit"
                    app:tint="#0A8313" />

                <ImageView
                    android:id="@+id/closeBtn"
                    android:clickable="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_cancelled"
                    app:tint="#B71C1C" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">




        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>